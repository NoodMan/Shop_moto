{% extends 'base.html.twig' %}

{% block title %}Moto{% endblock %}

{% block body %}
    <h1>Moto</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ moto.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ moto.Titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ moto.Description }}</td>
            </tr>
            <tr>
                <th>KM</th>
                <td>{{ moto.KM }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ moto.Prix }}</td>
            </tr>
            <tr>
                <th>DateImat</th>
                <td>{{ moto.DateImat ? moto.DateImat|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Puissance</th>
                <td>{{ moto.Puissance }}</td>
            </tr>
        </tbody>
    </table>

